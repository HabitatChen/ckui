{
    "compilerOptions": {
        "outDir": "build", // 编译好的文件输出到哪个文件夹
        "module": "esnext",       // 输出的类型
        "target": "ES5",           // 生成后 符合什么ES版本
        "declaration": true,        // 为每一个文件生成 .d.ts文件
        "jsx": "react",             // react.createElement 代替Element
        "moduleResolution": "node",  // 查找路径
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"], // 需要编译哪些文件 包含src下的所有文件
    "exclude": [   
        "src/**/*.test.tsx",
        "src/**/*.stories.tsx",
    ],                 // 哪些文件不需要被编译
}